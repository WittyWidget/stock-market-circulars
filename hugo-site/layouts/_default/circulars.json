{{- $pages := where .Site.RegularPages "Section" "circulars" -}}
{{- $circulars := slice -}}
{{- range $pages -}}
  {{- if .Params.source -}}
    {{- $circular := dict
        "id" .File.TranslationBaseName
        "title" .Title
        "source" (.Params.source | default "")
        "severity" (.Params.severity | default "")
        "category" (.Params.category | default "")
        "tags" (.Params.tags | default slice)
        "date" (.Date.Format "2006-01-02")
        "impact" (.Params.impact | default "")
        "url" .Permalink
        "pdfUrl" (.Params.pdf_url | default "")
        "description" (.Params.description | default "")
        "priority" (.Params.priority | default "")
    -}}
    {{- $circulars = $circulars | append $circular -}}
  {{- end -}}
{{- end -}}
{{- dict "circulars" $circulars | jsonify -}}