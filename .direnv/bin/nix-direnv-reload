#!/usr/bin/env bash
set -e
if [[ ! -d "/home/rhnvrm/Documents/Code/inbox/stock-market-circulars" ]]; then
  echo "Cannot find source directory; Did you move it?"
  echo "(Looking for "/home/rhnvrm/Documents/Code/inbox/stock-market-circulars")"
  echo 'Cannot force reload with this script - use "direnv reload" manually and then try again'
  exit 1
fi

# rebuild the cache forcefully
_nix_direnv_force_reload=1 direnv exec "/home/rhnvrm/Documents/Code/inbox/stock-market-circulars" true

# Update the mtime for .envrc.
# This will cause direnv to reload again - but without re-building.
touch "/home/rhnvrm/Documents/Code/inbox/stock-market-circulars/.envrc"

# Also update the timestamp of whatever profile_rc we have.
# This makes sure that we know we are up to date.
touch -r "/home/rhnvrm/Documents/Code/inbox/stock-market-circulars/.envrc" "/home/rhnvrm/Documents/Code/inbox/stock-market-circulars/.direnv"/*.rc
